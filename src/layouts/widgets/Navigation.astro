---
import { lavender700, lavender800, slate200, slate600, space500, space800, space900 } from "$lib/colors";

import Transcube from "./Transcube.astro";
---

<nav>
    <section>
        <div>
            <p>Main Site</p>

            <a href="/">Home</a>
        </div>

        <div>
            <p>Misc</p>

            <a href="https://the.sqky.one/">Files Archive</a>
        </div>

        <footer>
            <Transcube />
        </footer>
    </section>
</nav>

<style
    define:vars={{
        bgColor: lavender800,
        borderColor: lavender700,
        linkBorderColor: space500,
        linkBgColor: space900,
        linkBgColorActive: space800,
        textBgColor: slate600,
        textBorderColor: slate200,
    }}
>
    nav {
        display: block;

        max-height: 100dvh;

        position: sticky;
        top: 0;
        left: 0;

        flex: fit-content;

        border: 2px var(--borderColor) solid;
        border-radius: 0.3rem;
        background-color: var(--bgColor);

        backdrop-filter: blur(2px);
        box-shadow:
            0px 0px 6px 3px rgba(0, 0, 0, 0.5),
            inset 0px 0px 3px 2px rgba(90, 90, 160, 0.2);
    }

    p,
    a {
        display: block;

        width: fit-content;
        height: min-content;
    }

    p {
        text-align: center;

        padding-block: 0.3rem;
        margin-block: 1rem;
        width: 100%;

        border: 1px solid var(--textBorderColor);
        background-color: var(--textBgColor);
    }

    a::before {
        content: "|> ";
    }

    a {
        padding: 0.15rem;
        margin-block: 0.5rem;
        margin-inline: 0.5rem;

        border: 1px solid var(--linkBorderColor);
        background-color: var(--linkBgColor);
    }

    a:hover,
    a:focus {
        background-color: var(--linkBgColorActive);
    }

    footer {
        margin-left: auto;
        margin-top: auto;
    }

    section {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;

        overflow: scroll;

        height: 100%;

        gap: 2rem;
    }

    nav {
        padding-block: 0.75rem;
        margin-right: 1.75rem;
        min-width: 180px;
    }

    @media (max-width: 1200px) {
        nav {
            padding-block: 0;
            margin-inline: 0;
            min-width: none;

            border-top: none;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        section {
            flex-direction: row;
            padding-inline: 1rem;
        }
    }
</style>

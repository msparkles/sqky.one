---
import Picture, { type Props as P } from "./Picture.astro";

export type Props = P;

const props = Astro.props;
---

<Picture
    pictureAttributes={{ class: "icon-container" }}
    {...props}
    class:list={[props["class:list"], "icon"]}
    alt=""
/>

<style>
    .icon {
        display: inline;
        width: auto;
        height: 1.25em;
        vertical-align: sub;
    }
</style>
